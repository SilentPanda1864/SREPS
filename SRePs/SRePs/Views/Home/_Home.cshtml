<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="search">
                <ul class="nav nav-tabs">
                    <li class="active"><a>Sales Records</a></li>
                </ul>
                <br/>
                <div class="tab-content">
                    <div class="search-bar">
                        <div class="tab-pane active">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for..."/>
                                <span class="input-group-btn">
                                    <span data-toggle="tooltip" data-placement="bottom" title="Add a new sales report">
                                        <button class="btn btn-success" data-toggle="modal" data-target="#addReportModal"type="button"><span class="glyphicon glyphicon-plus"/></button>
                                    </span>
                                </span>
                            </div>
                            <br />
                                <span data-bind="if: salesRecords().length == 0 && salesRecords() != null">No data to display.</span>
                            <table class="table table-striped"data-bind="if: salesRecords().length > 0 && salesRecords() != null">
                                <thead>
                                    <th>Sales ID</th>
                                    <th>Actions</th>
                                </thead>
                                <tbody data-bind="foreach: ids">
                                <tr>
                          
                                    <td data-bind="text: $data"></td>
                                    <td>
                                        <button class="btn btn-info glyphicon glyphicon-eye-open"></button>
                                        <button class="btn btn-default glyphicon glyphicon-pencil"></button>
                                        <button class="btn btn-danger glyphicon glyphicon-trash"></button>
                                    </td>
                                    
                                </tr>
                                </tbody>
                            </table >
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-primary earnings col">
                <div class="panel-heading">Earnings</div>
                <div class="panel-body">
                    Placeholder Text
                </div>
            </div>
        </div>
    </div>
    <div id="addReportModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="title-group">
                        <h4 class="modal-title">Add new sales report</h4>
                        <input type="hidden" id="salesIdholder" value="" />
                        <button type="button" data-toggle="tooltip" data-placement="bottom" title="Add a new item" id="addNewProduct" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span></button>
                   </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-control-label" for="inputProductName">Product Name</label>
                            <input id="inputProductName" class="form-control"type="text" name="productName"/>
                        </div>
                        <div class="col-md-6 move-left">
                            <label class="form-control-label" for="inputAmountSold">Amount Sold</label>
                            <input id="inputAmountSold" class="form-control"type="number" name="amountSold" value="1"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button data-bind="click: buildArray" type="submit" class ="btn btn-primary">Add report</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</div>
